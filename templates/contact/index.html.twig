{% extends 'base.html.twig' %}

{% block title %}Nous contacter - La boutique Portugaise{% endblock %}

{% block content %}
    <h2>Nous contacter</h2>
    <p>N'hésitez pas à prendre contact avec notre équipe</p>
    {% for message in app.flashes('notice') %}
        <div class="alert alert-info">{{ message }}</div>
    {% endfor %}
    <div class="row">
        <div class="col-md-8">{{ form(form) }}</div>
        <div class="col-md-4">
            <strong>La Boutique Portugaise</strong>
            <hr>
            tel <br>
            adresse <br>
            reseaux <br>
        </div>
    </div>
{% endblock %}
